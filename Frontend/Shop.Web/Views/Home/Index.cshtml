@{
    ViewData["Title"] = "Full Stack Case";
    var category = ViewBag.Category;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        .sidebar {
            height: 100vh;
            padding-top: 1rem;
        }
        .content {
            padding: 2rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            cursor: pointer;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .logo:hover {
            color: wheat;
        }
        .product-slider {
            background-color: #f8f9fa;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .product-table {
            background-color: #fff;
            padding: 1rem;
        }
        .product-table table {
            width: 100%;
        }
        .actions {
            display: flex;
            width: 15%;
        }

        .dropdown {
            margin-left: 12px;
        }

        #cart-button {
            cursor: pointer;
        }

        .header {
            display: flex;
            justify-content: space-between; /* Elemanları sağa ve sola yaslar */
            align-items: center; /* Dikey olarak ortalar */
            padding: 0 20px; /* Kenarlardan 20px boşluk bırakır */
        }
    </style>
</head>
<body>
    


    <header class="bg-dark text-white py-3">
        <div class="header">
            <a href="/" class="logo">Full Stack Case</a>
            <div class="actions">
                <a id="cart-button" class="text-white">Cart (<span id="cart-count">0</span>)</a>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                        Account
                    </a>

                    <ul class="dropdown-menu" id="accountPopup" />
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 bg-light sidebar">

                <!-- Category List Section-->
                <ul class="nav flex-column" id="categoryList"/> 
            </nav>
            <main class="col-md-9 col-lg-10 content">
                
                
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators" id="carouselIndicators"></ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" id="carouselInner"></div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>




                <div class="product-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th></th>
                            </tr>
                        </thead>

                        <!-- Product List Section-->
                        <tbody id="productList"/>
                    </table>
                </div>
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"></script>
    <script>
        let currentCartId = 0;
        $(document).ready(function () {
            var category = '@category';
            loadCategories();
            loadProducts(category);
            checkLoginStatus();

            $('#accountBtn').on('click', function () {
                $('#accountPopup').toggle();
            });

            function loadCategories() {
                $.ajax({
                    url: 'https://localhost:7221/api/category/',
                    method: 'GET',
                    success: function (data) {
                        var categoryList = $('#categoryList');
                        categoryList.empty();
                        data.data.forEach(function (category) {
                            categoryList.append('<li class="nav-item"><a class="nav-link" href="/' + category.path + '">' + category.name + '</a></li>');
                        });
                        categoryList.append('<li class="nav-item"><a class="nav-link" href="/">All Categories</a></li>');

                    },
                    error: function () {
                        alert('Kategoriler yüklenirken bir hata oluştu.');
                    }
                });
            }

            function loadProducts(category) {
                var apiUrl = 'https://localhost:7221/api/Product';
                if (category) {
                    apiUrl += '?category=' + category;
                }
                $.ajax({
                    url: apiUrl,
                    method: 'GET',
                    success: function (data) {

                        var productList = $('#productList');
                        data.data.forEach(function (product) {
                            var row = `
                                        <tr>
                                            <td><img src="${product.image}" alt="${product.title}" style="width: 100px; height: auto;"/></td>
                                            <td>${product.title}</td>
                                            <td>${product.price} ₺</td>
                                            <td>${product.quantity}</td>
                                            <td>
                                                <button class="btn btn-primary add-to-cart"
                                                        data-product-id="${product.id}"
                                                        data-product-title="${product.title}">
                                                    Add to Cart
                                                </button>
                                            </td>
                                        </tr>`;
                            productList.append(row);
                          

                        });
                        var tempList = data.data;
                        var products = tempList.sort(() => 0.5 - Math.random()).slice(0, 3);

                        var carouselInner = $('#carouselInner');
                        var carouselIndicators = $('#carouselIndicators');

                        carouselInner.empty();
                        carouselIndicators.empty();
                        products.forEach(function (product, index) {
                            var activeClass = index === 0 ? 'active' : '';

                            var itemHtml = `
                                             <div class="item ${activeClass}">
                                                <img src="${product.image}" alt="${product.title}" class="d-block w-100" style="height: 200px; width: 100%; object-fit: contain;">
                                             </div>
                                        `;

                            carouselInner.append(itemHtml);

                            var indicatorHtml = `
                                                 <li data-target="#myCarousel" data-slide-to="${index}" class="${activeClass}"></li>
                                                `;
                            carouselIndicators.append(indicatorHtml);
                        });

                        $(document).on('click', '.add-to-cart', function () {
                            var productId = $(this).data('product-id');
                            var productTitle = $(this).data('product-title');
                            addToCart(productId, productTitle);
                        });
                    },
                    error: function () {
                        alert('Ürünler yüklenirken bir hata oluştu.');
                    }
                });
            }

            function checkLoginStatus() {
                var token = localStorage.getItem('accessToken');
                if (token) {
                    $.ajax({
                        url: 'https://localhost:7221/api/user',
                        method: 'GET',
                        headers: {
                            'Authorization': 'Bearer ' + token
                        },
                        success: function (data) {
                            var accountPopup = $('#accountPopup');
                            accountPopup.empty();
                            accountPopup.append('<a href="/user/profile" style="cursor: pointer; text-decoration: none;"> My Account </a><br/>');
                            accountPopup.append('<a href="#" id="logoutBtn">Çıkış Yap</a>');
                            // cart item count
                            currentCartId = data.data.carts[0].id;
                            var count = 0;
                            console.error(data.data);
                            data.data.carts[0]?.cartItems?.forEach(function (item) {
                                count += item.quantity;
                            })
                            $('#cart-count').text(count);
                            $('#logoutBtn').on('click', function () {
                                logout();
                            });
                        },
                        error: function () {
                            displayLoginOptions();
                        }
                    });
                } else {
                    displayLoginOptions();
                }
            }

            function displayLoginOptions() {
                var accountPopup = $('#accountPopup');
                accountPopup.empty();
                accountPopup.append('<a href="/auth/signin" id="loginBtn">Signin</a>');
                accountPopup.append('<br/>');
                accountPopup.append('<a href="/auth/signup">Signup</a>');
                
            }


            function logout() {
                localStorage.removeItem("accessToken");
                location.reload();
            }

            function addToCart(productId, productTitle){
                var token = localStorage.getItem('accessToken');
                if (token == null || token == "") return alert("You need to signin first!");
                $.ajax({
                    url: 'https://localhost:7221/api/Cart/AddToCart',
                    type: 'POST',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    contentType: 'application/json',
                    data: JSON.stringify({
                        productId: productId,
                        quantity: 1
                    }),
                    success: function (response) {
                        var cartCount = parseInt($('#cart-count').text()) || 0;
                        $('#cart-count').text(cartCount + 1);
                    },
                    error: function (error) {
                        console.error('Error adding product to cart:', error);
                    }
                });
            }

            $('#cart-button').click(function () {
                if (currentCartId !== 0) {
                    window.location.href = '/cart/' + currentCartId;
                } else {
                    alert("Cart ID is not available.");
                }
            });
        });


    </script>
</body>
</html>
